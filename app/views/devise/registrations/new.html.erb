<div class="centering-content-div">
  <div class="sign-up-container">
    <h2 class="sign-up-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "sign_up_form") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="su-field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "First Name", class: "su-input" %>
    </div>

    <div class="su-field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "su-input" %>
    </div>

    <div class="su-field">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", class: "su-input" %>
    </div>

    <div class="su-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "su-input" %>
    </div>

    <div class="su-field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "su-input" %>
    </div>

    <div class="su-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "su-input" %>
    </div>

    <%= f.submit "Sign up", class: "sign-up-btn" %>
    <% end %>

    <%= link_to "Log in", new_session_path(resource_name), class: "su-login" %>
  </div>
</div>